{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "group:allNonMajor", // Rely on config:recommended for major version updates
    ":automergeMinor",
  ],
  schedule: ["* 2 * * 1"],
  prHourlyLimit: 4,
  timezone: "America/Los_Angeles",
  rangeStrategy: "widen",
  lockFileMaintenance: {
    enabled: true,
  },
  "pre-commit": {
    enabled: true,
  },
}
