{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "group:allNonMajor", // Rely on config:recommended for major version updates
    ":automergeMinor",
  ],
  schedule: ["* 2 1-7 * 1"],
  prHourlyLimit: 4,
  timezone: "America/Los_Angeles",
  rangeStrategy: "widen",
  lockFileMaintenance: {
    enabled: true,
    schedule: ["* 2 1-7 * 1"], // Work around https://github.com/renovatebot/renovate/discussions/33152
  },
  minimumReleaseAge: "2 weeks",
  "pre-commit": { enabled: true },
  packageRules: [
    {
      // TODO: remove after fhaviary supports Python 3.13
      matchPackageNames: ["python"],
      allowedVersions: "<=3.12",
    },
  ],
}
