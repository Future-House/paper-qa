{
  "llm": "gemini/gemini-2.0-flash-exp",
  "summary_llm": "gemini/gemini-2.0-flash-exp",
  "embedding": "text-embedding-004",
  "answer": {
    "evidence_k": 10,
    "answer_max_sources": 5,
    "answer_length": "about 200 words",
    "max_sources": 5
  },
  "parsing": {
    "chunk_size": 3000,
    "use_doc_details": true,
    "overlap": 100
  },
  "prompts": {
    "system": "You are a scientific research assistant. Provide clear, accurate answers about scientific papers with proper citations and evidence."
  },
  "agent": {
    "agent_type": "ToolSelector",
    "search_count": 8,
    "index": {
      "paper_directory": "~/papers",
      "index_directory": "~/.paperqa/indexes"
    }
  },
  "verbosity": 0
}
