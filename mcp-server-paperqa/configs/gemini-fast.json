{
  "llm": "gemini/gemini-2.0-flash-exp",
  "summary_llm": "gemini/gemini-2.0-flash-exp",
  "embedding": "text-embedding-004",
  "answer": {
    "evidence_k": 5,
    "answer_max_sources": 3,
    "answer_length": "about 100 words"
  },
  "parsing": {
    "chunk_size": 2000,
    "use_doc_details": true,
    "overlap": 50
  },
  "prompts": {
    "system": "You are a scientific research assistant. Provide concise, accurate answers about scientific papers with citations."
  },
  "agent": {
    "agent_type": "ToolSelector",
    "search_count": 5,
    "index": {
      "paper_directory": "~/papers",
      "index_directory": "~/.paperqa/indexes"
    }
  },
  "verbosity": 0
}
